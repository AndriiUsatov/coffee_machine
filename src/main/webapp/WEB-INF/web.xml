<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

    <welcome-file-list>
        <welcome-file>exit</welcome-file>
    </welcome-file-list>
    <error-page>
        <location>/pages/error.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>mvc.controllers.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registrationServlet</servlet-name>
        <servlet-class>mvc.controllers.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>makeDrink</servlet-name>
        <servlet-class>mvc.controllers.servlets.MakeDrinkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>makeDrink</servlet-name>
        <url-pattern>/makeDrink</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>replenishAccount</servlet-name>
        <servlet-class>mvc.controllers.servlets.ReplenishAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>replenishAccount</servlet-name>
        <url-pattern>/replenishAccount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>personalAccountServlet</servlet-name>
        <servlet-class>mvc.controllers.servlets.PersonalAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>personalAccountServlet</servlet-name>
        <url-pattern>/personalAccount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>fillContainerServlet</servlet-name>
        <servlet-class>mvc.controllers.servlets.FillContainerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fillContainerServlet</servlet-name>
        <url-pattern>/fillContainer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>exitServlet</servlet-name>
        <servlet-class>mvc.controllers.servlets.ExitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>exitServlet</servlet-name>
        <url-pattern>/exit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>fillingHistoryServlet</servlet-name>
        <servlet-class>mvc.controllers.servlets.GetFillsHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fillingHistoryServlet</servlet-name>
        <url-pattern>/fillingHistory</url-pattern>
    </servlet-mapping>
    <display-name>Coffee machine</display-name>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/coffee_machine</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <session-config>
        <session-timeout>300</session-timeout>
    </session-config>
</web-app>
